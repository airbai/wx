page{padding-bottom:50px;}
.case{height:17rem;margin: .58rem auto 0;background: #fff;border:solid 1px #f1f1f1;overflow:hidden;}
.case .title,.case .tag{padding:0 5rem 0 15px;}
.case .pic{width:100%;height:13rem;}
.case .headPic{right:10px;top:12.5rem;}
.case .headPic image{width:2.6rem;height:2.6rem;border-radius: 50%;border:solid 2px #fff;}
