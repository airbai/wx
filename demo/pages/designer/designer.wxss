.banner,.banner .pic{width:20rem;height:7.46rem;}
.banner .head{top:.8rem;left:8.8rem;width:2.4rem;height:2.4rem;border:solid 2px #fff;border-radius: 50%;box-sizing: border-box;}
.banner .name{top:3.4rem;left:0;color:#fff;font-size: 0.8rem;}
.banner .address{top:4.4rem;left:0;color:#fff;font-size: 0.64rem;}
.banner .price{top:5.4rem;left:0;color:#fff;font-size: 0.64rem;}
.banner .price text{color:#ffcf3d;font-size: 0.8rem;}
.service_bar{background:#fff;height:2.34rem;line-height: 2.34rem;border-bottom:solid 1px #eee;color:#ff4049;margin-left: -1px;}
.service_bar .flex1{border-left: solid 1px #eee}
.tab_bar{background:#fff;height:2.34rem;line-height: 2.34rem;border-top:solid 1px #eee;}
.tab_bar .active{border-bottom:solid 1px #ff4049;color:#ff4049;}

.case{height:15.6rem;margin: .58rem auto 0;background: #fff;border:solid 1px #f1f1f1;overflow:hidden;}
.case .title,.case .tag{padding:0 0 0 10px;font-size: 12px;}
.case .pic{width:100%;height:13rem;}
.case .headPic{right:10px;top:12.5rem;}
.case .headPic image{width:2.6rem;height:2.6rem;border-radius: 50%;border:solid 2px #fff;}
.case .headPic text{display: block;font-size:14px;}

.jianjie{padding:15px;line-height: 1.5;}