/**app.wxss**/
image{background: #f5f5f5;}
input,.picker{border:solid 1px #eee;background: #fff;padding:0.3rem;margin-top:0.5rem;height:1.4rem;line-height: 1.4rem;}
modal text{padding:6px 0 0 6px;}
.clearfix:after{content: '';clear: both;display: block;height:1px;}
page{background:#fafafa;font-size:14px;color:#666;line-height: 1.5;position: relative;min-height:100%;box-sizing:border-box;}

/*宽度*/
.w{width:18rem;margin:0 auto;}

/*定位*/
.pr{position: relative;}
.pa{position: absolute;}

/*文字超出省略*/
.ellipsis {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    display: block;
}

/*对齐*/
.tl{text-align: left;}
.tc{text-align: center;}
.tr{text-align: right;}

/*间距*/
.mt5{margin-top: 0.133rem;}
.mt10{margin-top: 0.267rem;}
.mt15{margin-top: 0.4rem;}
.mt20{margin-top: 0.533rem;}
.mt25{margin-top: 0.667rem;}
.mt30{margin-top: 0.8rem;}
.mt35{margin-top: 0.933rem;}
.mt40{margin-top: 1.067rem;}

/*背景*/
.bg_f{background: #fff}

/*边框*/
.border_t{border-top:solid 1px #eee;}
.border_b{border-bottom: solid 1px #eee;}

/*弹性盒模型*/
.box {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}
.flex1 {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    -ms-flex: 1;
    box-flex: 1;
    flex: 1;
    overflow: hidden;
    display: block;
}

/*footer*/
.footer_box{height:80px;line-height: 80px;margin-top:1rem;}
.footer{font-size: 14px;bottom:0;width:20rem;}
